{
  "manifest_version": 3,
  "name": "AI Event Scheduler",
  "version": "1.1",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "description": "AI Event Scheduler: quickly create Google calendar events by selecting details and clicking a button.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "AI Event Scheduler"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png"
  }
}