{
  "manifest_version": 3,
  "name": "GPT3 Event Scheduler",
  "version": "1.1",
  "background": {
    "service_worker" : "service_worker.js",
    "type" : "module"
  },
  "description": "GPT3 Event Scheduler: quickly create Google calendar events by selecting details and clicking a button.",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "GPT3 Event Scheduler"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png"
  }
}
