{
  "manifest_version": 3,
  "name": "supercalendar",
  "version": "0.1",
  "background": {
    "service_worker" : "service_worker.js",
    "type" : "module"
  },
  "description": "Make calendaring better",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "supercalendar"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png"
  }
}